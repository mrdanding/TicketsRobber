<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/bookCaptcha"
        android:layout_x="44dp"
        android:layout_y="24dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_captcha" />

    <EditText
        android:id="@+id/bookCaptchaInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="102dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bookRefresh"
        android:layout_width="54dp"
        android:layout_height="58dp"
        android:layout_x="216dp"
        android:layout_y="15dp"
        android:background="@drawable/refresh"
        android:onClick="doBookRefresh"
        android:text="" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="122dp"
        android:background="@drawable/submit"
        android:onClick="doSubmit"
        android:text="提交" />

</AbsoluteLayout>