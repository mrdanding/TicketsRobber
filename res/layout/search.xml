<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/destination"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="目的地："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/departure"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="出发地："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/leavingDate"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text="出发日期："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/trainNumber"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="车次："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/departureField"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/destinationField"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10" />

    <EditText
        android:id="@+id/trainNumberField"
        android:layout_column="3"
        android:layout_gravity="left|center_vertical"
        android:layout_row="4"
        android:ems="10" />

    <CalendarView
        android:id="@+id/departureDateField"
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="5" />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_row="8" />

    <Button
        android:id="@+id/robTicketButton"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="抢票" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_column="3"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="6" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton" />
    </RadioGroup>

    <TextView
        android:id="@+id/passanger"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="6"
        android:text="乘车人："
        android:textAppearance="?android:attr/textAppearanceLarge" />

</GridLayout>